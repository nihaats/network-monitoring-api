<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Konsol appender: Her şeyi terminalde göster -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Dosya appender: Sadece login loglarını yaz -->
    <appender name="LOGIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/login-audit.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/login-audit-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- ROOT: sadece console'a yaz -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Sadece login controller loglarını dosyaya yaz -->
    <logger name="com.network_monitor.controller.auth" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOGIN_FILE"/>
    </logger>

</configuration>
